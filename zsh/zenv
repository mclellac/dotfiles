# zenv


if [[ $OSTYPE = 'linux-gnu' ]]; then
    GOPATH="${HOME}/Projects"
    GOROOT="/usr/lib/golang"
    PATH="$PATH:$GOROOT/bin:$GOPATH/bin:/opt/sublime_text_3:/opt/google-cloud-sdk/bin"
    export GOPATH GOROOT PATH

    # key bindings
    bindkey -e
    bindkey "^[[1;5C" forward-word
    bindkey "^[[1;5D" backward-word

    alias ls="ls --color"
    source ${HOME}/.zsh.gnu
    source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
    # gcloud zsh tab completion
    source /opt/google-cloud-sdk/completion.zsh.inc
elif [[ "$OSTYPE" == "freebsd"* ]]; then
    alias ls="ls -G"
    source ${HOME}/.zsh.bsd
elif [[ $OSTYPE = "darwin"* ]]; then
    GOPATH="${HOME}/Projects"
    GOROOT="/usr/local/opt/go/libexec"
    PATH="$PATH:$GOROOT/bin:$GOPATH/bin"
    export GOPATH GOROOT PATH

    # key bindings
    bindkey -e
    bindkey '^[[1;9C' forward-word
    bindkey '^[[1;9D' backward-word
 
    alias ls="ls -G"
    alias airport="/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport"
    #-- Google Cloud SDK 
    source '/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc'
    source '/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc'
    # openshift tab completion
    source <(oc completion zsh)

    #-- zsh-syntax-highlighting (brew package)
    source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
    source ${HOME}/.iterm2_shell_integration.zsh
    source ${HOME}/.zsh.osx
fi
