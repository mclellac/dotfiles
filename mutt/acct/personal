# Personal Account
# ------------------------------------------------------------------------------
# Authentication is handled by mbsync and msmtp, which should be configured to
# use OAuth2 for Gmail.
# set imap_user 	= "user@domain"
set folder 	    = "~/.local/share/mail/personal"
set from 	    = "user@domain"
set realname 	= "real name"

set spoolfile 	= "+INBOX"
set postponed 	= "+[Gmail]/Drafts"
set trash		= "+[Gmail]/Trash"
set my_spam_folder = "+[Gmail]/Spam"
set record      = "+[Gmail]/Sent Mail"
set ispell      = "aspell --mode=email check"
set copy=no

# IMAP connection settings
set imap_idle = yes
set imap_keepalive = 900

set header_cache        =~/.cache/mutt/personal/headers
set message_cachedir 	=~/.cache/mutt/personal/bodies
set certificate_file 	=~/.config/mutt/certificates/personal

# Neomutt needs to be told which mailboxes to check for new mail.
# It will not automatically discover all of your folders.
# We use a dynamic python script to find all local mailboxes robustly.
# This handles spaces and hierarchy correctly.
# ---------------------------------------------------------------------------------------------------
mailboxes `python3 ~/.config/mutt/scripts/find_mailboxes.py "$HOME/.local/share/mail/personal"`
