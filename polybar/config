[colors]
include-file = ~/.config/polybar/colors

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/default]
monitor = ${env:MONITOR:}
width = ${env:WIDTH:}
height = 25
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Hack Nerd Font Mono:style=Regular:size:11;1
font-1 = RobotoMono Nerd Font Mono:style=Regular:size:11;2
#font-2 = FontAwesome:style=Regular:size=11;3
fixed-center = true
line-size = 1
line-color = #f00
border-bottom-color = #4f5b66

[bar/main]
inherit = bar/default
tray-position = right
modules-left = i3
modules-center = xwindow i3msg
modules-right = memory dateTime powermenu

[module/memory]
type = internal/memory
interval = 2
format = " RAM <label>  "
label = %percentage_used%%

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
format = <label-mode><label-state>
label-mode-padding = 1
label-focused = %index%  %icon%
label-focused-padding = 1
label-unfocused = %index%  %icon%
label-unfocused-padding = 1
label-visible = %index%  %icon%
label-visible-padding = 1
label-urgent = %index%  %icon%
label-urgent-padding = 1
label-focused-foreground = ${colors.active}
label-focused-underline  = ${colors.active}
label-visible-foreground = ${colors.active}
label-urgent-foreground  = ${colors.urgent}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;廬
ws-icon-7 = 8;聆
ws-icon-8 = 9;
ws-icon-9 = 0;

[module/xwindow]
type = internal/xwindow
label-active-font = 3
label = %title%
label-maxlen = 30

[module/i3msg]
type = internal/i3
format =<label-state><label-mode>
label-mode = %mode%
label-mode-padding = 3
label-mode-background = ${colors.urgent}
label-mode-foreground = ${colors.background}
label-focused =
label-unfocused =
label-urgent =
label-visible =

[module/dateTime]
type = internal/date
date =%a %I:%M %p
format = <label>
date-alt = %d %B %Y
format-foreground = ${colors.foreground}
format-padding = 1
format-margin= 0

[module/powermenu]
type = custom/menu
format-padding = 1
label-open = "    "
label-separator = "  "
menu-0-0 = ""
menu-0-0-exec = menu-open-1
menu-0-1 = ""
menu-0-1-exec = menu-open-2
menu-0-2 = ""
menu-0-2-exec = menu-open-3
menu-0-3 = ""
menu-0-3-exec = menu-open-4
menu-0-4 = ""
menu-0-4-exec = menu-open-5
menu-1-0 = ""
menu-1-0-exec = systemctl hibernate -i
menu-2-0 = ""
menu-2-0-exec = systemctl reboot -i
menu-3-0 = ""
menu-3-0-exec = systemctl poweroff -i
menu-4-0 = ""
menu-4-0-exec = "~/bin/lock suspend"
menu-5-0 = ""
menu-5-0-exec = i3-msg exit

